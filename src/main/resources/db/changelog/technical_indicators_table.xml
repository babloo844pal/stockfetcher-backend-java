<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Create table for Transform Data -->
    <changeSet id="3-create-transform-table" author="developer">
        <createTable tableName="technical_indicators_data">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="full_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="overlay" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="series_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="default_color" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="display" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(2000)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
