<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Meta Info Table -->
    <changeSet id="1-metainfo" author="author">
        <createTable tableName="meta_info">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="symbol" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="currency" type="VARCHAR(10)">
                <constraints nullable="true"/>
            </column>
            <column name="exchange_timezone" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
            <column name="exchange" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
            <column name="mic_code" type="VARCHAR(10)">
                <constraints nullable="true"/>
            </column>
            <column name="type" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
            <column name="period" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="country_id" type="BIGINT"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
