<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create-balance-sheet-table" author="developer">
        <createTable tableName="balance_sheet">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="symbol" type="VARCHAR(50)" remarks="Stock symbol"/>
            <column name="name" type="VARCHAR(255)" remarks="Company name"/>
            <column name="currency" type="VARCHAR(10)" remarks="Currency"/>
            <column name="exchange" type="VARCHAR(50)" remarks="Stock exchange"/>
            <column name="mic_code" type="VARCHAR(50)" remarks="Market Identifier Code"/>
            <column name="exchange_timezone" type="VARCHAR(50)" remarks="Exchange timezone"/>
            <column name="period" type="VARCHAR(20)" remarks="Report period"/>
            <column name="fiscal_date" type="DATE" remarks="Fiscal report date"/>

            <!-- Store JSON for assets, liabilities, shareholders equity -->
            <column name="assets" type="JSON" remarks="Assets details"/>
            <column name="liabilities" type="JSON" remarks="Liabilities details"/>
            <column name="shareholders_equity" type="JSON" remarks="Shareholders equity details"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
