<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="4" author="author">
        <createTable tableName="countries">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="iso2" type="VARCHAR(2)">
                <constraints nullable="false"/>
            </column>
            <column name="iso3" type="VARCHAR(3)">
                <constraints nullable="false"/>
            </column>
            <column name="numeric_code" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="official_name" type="VARCHAR(500)"/>
            <column name="capital" type="VARCHAR(100)"/>
            <column name="currency" type="VARCHAR(10)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
