<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- ChangeSet to create the stock_details table -->
    <changeSet id="1-stock-details" author="developer">
        <createTable tableName="stock_details">
            <column name="symbol" type="VARCHAR(50)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="exchange" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="mic_code" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="currency" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="datetime" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="timestamp" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="open" type="DECIMAL(38, 2)">
                <constraints nullable="true"/>
            </column>
            <column name="high" type="DECIMAL(38, 2)">
                <constraints nullable="true"/>
            </column>
            <column name="low" type="DECIMAL(38, 2)">
                <constraints nullable="true"/>
            </column>
            <column name="close" type="DECIMAL(38, 2)">
                <constraints nullable="true"/>
            </column>
            <column name="volume" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="previous_close" type="DECIMAL(38, 2)">
                <constraints nullable="true"/>
            </column>
            <column name="change" type="DECIMAL(38, 2)">
                <constraints nullable="true"/>
            </column>
            <column name="percent_change" type="DECIMAL(38, 2)">
                <constraints nullable="true"/>
            </column>
            <column name="average_volume" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="is_market_open" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="fifty_two_week_low" type="DECIMAL(38, 2)">
                <constraints nullable="true"/>
            </column>
            <column name="fifty_two_week_high" type="DECIMAL(38, 2)">
                <constraints nullable="true"/>
            </column>
            <column name="low_change" type="DECIMAL(38, 2)">
                <constraints nullable="true"/>
            </column>
            <column name="high_change" type="DECIMAL(38, 2)">
                <constraints nullable="true"/>
            </column>
            <column name="low_change_percent" type="DECIMAL(38, 2)">
                <constraints nullable="true"/>
            </column>
            <column name="high_change_percent" type="DECIMAL(38, 2)">
                <constraints nullable="true"/>
            </column>
            <column name="range" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
